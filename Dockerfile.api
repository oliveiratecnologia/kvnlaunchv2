# Dockerfile.api
# Dockerfile para o API Gateway no Railway

FROM node:18-alpine

# Criar diretório de trabalho
WORKDIR /app

# Copiar package.json
COPY package-railway.json ./package.json

# Copiar código fonte
COPY index.js ./

# Instalar dependências
RUN npm install --production

# Expor porta
EXPOSE 3000

# Comando para iniciar API Gateway
CMD ["node", "index.js"]
